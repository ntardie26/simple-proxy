{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "public/dist",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
